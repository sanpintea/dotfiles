set whichwrap=b,s,h,l,<,>,[,]
set confirm
set hidden
set nobackup
set noswapfile
set tabstop=4
set encoding=utf-8
set termencoding=utf-8
set fileencodings=utf-8,iso-2022-jp,euc-jp,sjis
